<style>
    body {
        font-family: "Lato", sans-serif;
    }

    .sidenav {
        height: 100%;
        width: 250px;
        /*width: 0px;*/
        position: fixed;
        z-index: 1;
        top: 35px;
        left: 0;
        background-color: #252744;
        overflow-x: hidden;
        transition: 0.5s;
        padding-top: 10px;
    }

    .sidenav a {
        padding: 1px 8px 0px 32px;
        text-decoration: none;
        font-size: 18px;
        color: #818181;
        display: block;
        transition: 0.3s;
    }

    .sidenav a:hover {
        color: #f1f1f1;
    }

    .sidenav .closebtn {
        position: absolute;
        top: 0;
        right: 25px;
        font-size: 36px;
        margin-left: 50px;
    }

    @@media screen and (max-height: 350px) {
        .sidenav {
            padding-top: 10px;
        }

        .sidenav a {
            font-size: 15px;
        }
    }
</style>
